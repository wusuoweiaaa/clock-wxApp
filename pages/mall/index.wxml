      <!-- <text class='right'>更多</text> -->
    </view>
    <view class='chanpin-items'>
      <view class='cp-item' wx:for="{{productList[0].product_list}}" wx:key="" bindtap='toGoods'>
        <image src='{{item.cover}}' mode='widthFix'></image>
        <text class='cp-title'>{{item.title}}</text>
         <text class='cp-jifen'><text>{{item.credit}}</text>积分</text>
      </view>
