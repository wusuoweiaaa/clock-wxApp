<view class="index-container">
  <view class="swiper">
    <swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"  style='height:{{height}}' previous-margin= '30px' next-margin="30px">
      <block wx:for="{{images}}" wx:key="">
        <swiper-item>
          <image src="{{item}}" bindload='imgload' class="slide-image" mode='widthFix'/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class='jifen'>
    <view class='jifen-num'>
      <view class="left title-plus"><image src='../../image/jifen.png'></image>888积分</view>
      <text class='right'>兑换记录<text class="iconfont icon-you"></text></text>
    </view>
    <view class='jifen-item'>
      <view class='items'>
        <image src='../../image/jifen1.png'></image>
        <text>大转盘</text>
      </view>
