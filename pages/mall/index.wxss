.index-container {
  padding: .8rem;
}

.swiper {
  margin-top: .8rem;
}

.swiper swiper-item{
  height: 100%;
   width: 100%;
  
}

.swiper swiper-item image {
 
  width:calc(100% - 10px);
  border-radius: 3px;
}

.jifen {
  padding: .8rem;
  background: #fff;
}

.jifen .jifen-num {
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 14px;
  padding-bottom: .4rem;
  border-bottom: 1px solid #f9f9f9;
}

.jifen .jifen-num image {
  width: .8rem;
  height: .8rem;
  margin-right: .2rem;
}

.jifen .jifen-num .left {
  display: flex;
  align-items: center;
}

.jifen .jifen-num .right {
  display: flex;
  align-items: center;
}

.jifen .jifen-item {
  display: flex;
  justify-content: space-between;
  margin-top: .8rem;
}

.jifen .jifen-item .items {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #666;
}

.jifen .jifen-item .items image {
  width: 2rem;
  height: 2rem;
  margin-bottom: .3rem;
}

.title-plus {
  font-size: 16px !important;
  color: #000 !important;
}

.chanpin {
  padding: .8rem;
  background: #fff;
  margin-top:1rem;
}

.chanpin .title {
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 14px;
  padding-bottom: .4rem;
}

.chanpin .title image {
  width: .8rem;
  height: .8rem;
  margin-right: .2rem;
}

.chanpin .title .left {
  display: flex;
  align-items: center;
}

.chanpin .title .right {
  display: flex;
  align-items: center;
}

.chanpin .chanpin-items {
  display: flex;
  justify-content: space-between;
  margin-top: .8rem;
}

.chanpin .chanpin-items .cp-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  margin: 0 .25rem;
  width: 0;
}

.chanpin .chanpin-items .cp-item image {
  width: 100%;
}

.chanpin .chanpin-items .cp-item .cp-jifen {
  color: #999;
}

.chanpin .chanpin-items .cp-item .cp-jifen text {
  color: #ffda00
}

.chanpin .chanpin-items .cp-item .cp-title {
  width: 100%;
  overflow : hidden;
			text-overflow: ellipsis;
			display: -webkit-box;
			-webkit-line-clamp: 1;
			-webkit-box-orient: vertical;

}
