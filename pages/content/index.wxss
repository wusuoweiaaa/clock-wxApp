/* daka/pages/content/index.wxss */
.index-container {
  margin-bottom: 0;
}
.news-block {
  width: 100%;

}

.news-item {
  margin: 0 1rem;
  padding: 1rem 0 0 0;
  display: flex;
  border-bottom: 1px solid #EFEFEF;
  position: relative;
}

.news-item .left image {
  width: 3.3rem;
  height: 3.3rem;
  border-radius: 100%;
}
.news-item .left {
  margin-right: .6rem;
}

.news-item .right {
  display: flex;
  flex-direction: column;
  font-size: 16px;
}

.news-item .right text:nth-child(2) {
  font-size: 14px;
  color: #999;
  margin-bottom: .5rem;
}
.news-item .right text:nth-child(1) {
  font-weight: 600;
}

.news-item .right image {
  width: 5rem;
  height: 5rem;
  margin-right: 5px;
}

.info {
  position:absolute;right:0;
}

.info image{
  width:1.5rem;height:1.5rem;
}
.infocover {
  position: absolute;
  z-index: 100;
  top: 0;
  bottom: 0;
  right: 0;
  width: 100vw;
  background: rgba(0, 0, 4, 0.3);
  display: flex;
}

.zan {
  margin-top:1rem;
  display: flex;
  align-items: center;
  margin-bottom:.4rem;
}

.news-item .zan image{
  width: 1.5rem;
  height: 1.5rem;
}

.daodi {
  text-align:center;
font-size:14px;
padding:.5rem;
color:#999;

}