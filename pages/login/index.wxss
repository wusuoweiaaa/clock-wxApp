/* daka/pages/login/index.wxss */
.login-container {
  background: #fff;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  
}

.top {
 display: flex;
 flex-direction: column;
 align-items: center;
 margin: 1rem;
 padding-top: 5rem;
 padding-bottom: 1rem;
 border-bottom: 1px solid #eee;
}

.top image{
  width: 5rem;
  height: 5rem;
  margin-bottom:1rem;
}

.bottom {
  margin: 2rem;
  margin-top: 0rem;
  font-size:15px;
line-height:28px;

}

.buttons {
  margin: 1rem;
  display: flex;
  justify-content: space-between;
}

.buttons view {
  flex: 1;
  text-align: center;
}

.buttons button {
  flex: 1;
  text-align: center;
}

.buttons view:nth-child(1) {
  margin-right: 1rem;
}

.shouquan {
  background: #0c5beb;
  color: #fff;
  border-radius: 3px;
  padding: 0;
}

.back {
  color: #898989;
  background: #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
}

.color-grey {
  color: #999;
}