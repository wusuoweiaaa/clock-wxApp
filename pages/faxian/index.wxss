.tuijian {
  margin: .8rem;
  width:calc(100% - 1.6rem);
}

.tuijian .title {
  text-align: left;
  font-size: 18px;
  font-weight: 600;
  color:#333;
}

.tuijian-item {
  margin-top: .8rem;
  background-color: #fff;
}

.tuijian-item .tuijian-cover {
  width: 100%;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  display:block;
}

.tuijian-item .tuijian-info {
  background-color: #fff;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  font-size: 14px;
  padding: .5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
}

.tuijian-item .avatars image {
  width: 1.5rem;
  height: 1.5rem;
  border-radius: 100%;
  margin-right: .3rem;
}

