/* daka/pages/pocket/index.wxss */
.index-container {
  padding:.8rem;
}

.moneyinfo-block {
  padding: .8rem;
  background-color: #fff;
  border-radius: 3px;
  text-align: center;
}

.moneyinfo-block .title {
  font-size: 13px;
}

.moneyinfo-block .count {
  font-size: 30px;
  margin-top:.5rem;
}

.moneyinfo-block .tixian {
  margin-top: 2rem;
  padding: .4rem;
  background:linear-gradient(to right, #FFDA00, #ffaa00);
  border-radius: 3px;
  font-size: 16px;
}

.moneyinfo-block .detail {
  margin-top: 1rem;
  padding: .4rem;
  border-radius: 3px;
  font-size: 16px;
  background-color: #F9F9F9;
}